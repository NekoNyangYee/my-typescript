{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS", // ES6 대신 CommonJS로 변경하여 Node.js에서 호환되도록 설정
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "*": ["*"]
    }
  },
  "include": ["src/**/*"], // src 내 모든 파일 포함
  "exclude": ["node_modules", "dist"] // dist 내 모든 파일 제외
}
